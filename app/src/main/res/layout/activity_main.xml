<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Switch
        android:id="@+id/color_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/buttoncolor3"
        android:text="Night mode"
        android:paddingLeft="15dp"
        android:textColor="?attr/textcolor"
        android:textColorHighlight="?attr/specialcolor" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="?attr/buttoncolor4"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="?attr/textcolor"
        android:textIsSelectable="true"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="?attr/buttoncolor3"
            android:gravity="right"
            android:maxLines="1"
            android:padding="20dp"
            android:textColor="?attr/textcolor"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/specialcolor"
            android:scaleType="centerInside"
            android:src="@drawable/ic_backspace_black_24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:textColor="?attr/textcolor">

            <Button
                android:id="@+id/motlak"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/cardbackground"
                android:text="|X|"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="?attr/textcolor" />

            <Button
                android:id="@+id/c"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/buttoncolor2"
                android:text="C"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="?attr/textcolor" />

            <Button
                android:id="@+id/number_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/buttoncolor3"
                android:text="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="?attr/textcolor" />

            <Button
                android:id="@+id/number_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/buttoncolor3"
                android:text="4"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="?attr/textcolor" />

            <Button
                android:id="@+id/number__7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/buttoncolor3"
                android:text="7"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="?attr/textcolor" />

            <Button
                android:id="@+id/dot"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/buttoncolor3"
                android:text="."
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="?attr/textcolor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/x_square"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/cardbackground"
                android:text="X²"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="?attr/textcolor" />

            <Button
                android:id="@+id/percent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/cardbackground"
                android:text="%"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="?attr/textcolor" />

            <Button
                android:id="@+id/number_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/buttoncolor3"
                android:text="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="?attr/textcolor" />

            <Button
                android:id="@+id/number_5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/buttoncolor3"
                android:text="5"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="?attr/textcolor" />

            <Button
                android:id="@+id/number_8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/buttoncolor3"
                android:text="8"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="?attr/textcolor" />

            <Button
                android:id="@+id/number_0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/buttoncolor3"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="?attr/textcolor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <Button
                android:id="@+id/one_divide_by"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/cardbackground"
                android:text="¹/x"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="?attr/textcolor" />

            <Button
                android:id="@+id/r_square"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/cardbackground"
                android:text="√x"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="?attr/textcolor" />

            <Button
                android:id="@+id/number_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/buttoncolor3"
                android:text="3"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="?attr/textcolor" />

            <Button
                android:id="@+id/number_6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/buttoncolor3"
                android:text="6"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="?attr/textcolor" />

            <Button
                android:id="@+id/number__9"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/buttoncolor3"
                android:text="9"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="?attr/textcolor" />

            <Button
                android:id="@+id/plus_minus"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/buttoncolor3"
                android:text="±"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="?attr/textcolor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <Button
                android:id="@+id/div"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/cardbackground"
                android:text="/"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="?attr/textcolor" />

            <Button
                android:id="@+id/multi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/cardbackground"
                android:text="*"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="?attr/textcolor" />

            <Button
                android:id="@+id/minus"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/cardbackground"
                android:text="-"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="?attr/textcolor" />

            <Button
                android:id="@+id/plus"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/cardbackground"
                android:text="+"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="?attr/textcolor" />

            <Button
                android:id="@+id/equal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="?attr/buttoncolor2"
                android:text="="
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="?attr/textcolor" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>